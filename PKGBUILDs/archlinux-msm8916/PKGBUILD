pkgname=archlinux-msm8916
pkgver=1
pkgrel=4
pkgdesc="Arch Linux on MSM8916"
arch=(any)
url="https://github.com/samcday/archlinux-msm8916"
license=('MIT')
depends=(
    dracut
    linux-firmware-qcom
    msm-firmware-loader
)
source=(
    dracut.conf
    tm2-touchkey-leds.rules
)
sha256sums=('2ed979b8ade891895889f43819acefa39d13d9fb1c2cbcc415d22b87ea2c7a75'
            'e67f52aa0e7c1d8e276485f134bac91ad10c3410f17c1d5f5e6d429e2b2a5444')

package() {
    install -D -m644 tm2-touchkey-leds.rules ${pkgdir}/usr/lib/udev/rules.d/tm2-touchkey-leds.rules
    install -D -m644 dracut.conf ${pkgdir}/usr/lib/dracut/dracut.conf.d/msm8916.conf
}
